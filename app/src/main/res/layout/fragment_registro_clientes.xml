<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabi.atc.Fragmentos.RegistroClientes">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/Clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clave del Cliente: "
        android:textSize="20dp"
        />

 <EditText
     android:enabled="false"
     android:id="@+id/edtClave"
     android:textAlignment="center"
     android:layout_toEndOf="@id/Clave"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

    <EditText
        android:inputType=""
        android:id="@+id/edtNombre"
        android:textAlignment="center"
        android:layout_below="@id/edtClave"
        android:hint="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtDireccion"
        android:textAlignment="center"
        android:layout_below="@id/edtNombre"
        android:hint="DirecciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:textAlignment="center"
        android:id="@+id/Ciudades"
        android:layout_below="@id/edtDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Aceptar"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Ciudades"
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="phone"
        android:layout_toStartOf="@id/btnAceptar"
        android:id="@+id/edtTelefono"
        android:textAlignment="center"
        android:layout_below="@id/Ciudades"
        android:hint="Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/RegistroClientes"
        android:layout_below="@id/btnAceptar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
