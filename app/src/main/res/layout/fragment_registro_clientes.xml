<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabi.atc.Fragmentos.RegistroClientes">

    <EditText
        android:id="@+id/edtR"
        android:hint="R-001"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtNombre"
        android:textAlignment="center"
        android:hint="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Spinner
        android:id="@+id/spCiudades"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtDireccion"
        android:textAlignment="center"
        android:hint="Dirección"
        android:layout_below="@id/edtR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Aceptar"
        android:id="@+id/btnAgregar"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edtDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtTelefono"
        android:textAlignment="center"
        android:layout_below="@id/edtDireccion"
        android:hint="Teléfono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listaClientes"
        android:layout_below="@id/edtTelefono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</RelativeLayout>
