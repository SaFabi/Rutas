<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context="com.example.fabi.atc.Fragmentos.CarritoFragment">รง
    <TextView
        android:fontFamily="sans-serif"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:id="@+id/txtfoliocarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Folio: " />
    <TextView
        android:id="@+id/txtclientecarrito"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Cliente"
        android:layout_below="@id/txtfoliocarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinnerclientescarrito"
        android:paddingLeft="20dp"
        android:layout_below="@id/txtfoliocarrito"
        android:layout_toEndOf="@id/txtclientecarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnterminarcompra"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/reporte"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/montototalcarrito"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Total:"
        android:layout_toStartOf="@id/btnterminarcompra"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_below="@id/spinnerclientescarrito"
        android:id="@+id/listaproductoscarrito"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
</RelativeLayout>
