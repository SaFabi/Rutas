<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/contenedorCreditosPendientes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context="com.example.fabi.atc.Fragmentos.ClientesActivos">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context="com.example.fabi.atc.Fragmentos.CreditosPendientes">
    <TextView
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/puntoVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="10dp"
       android:paddingLeft="50dp"
        android:layout_toEndOf="@id/puntoVenta"
        android:id="@+id/spinnerClaves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/CreditoClientes"
        android:layout_below="@id/spinnerClaves"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>